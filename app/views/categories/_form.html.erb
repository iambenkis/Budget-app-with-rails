<%= form_with(model: category, class: "contents") do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5 px-2">
    <%= form.text_field :name,
        placeholder: "Category name",
        class: "text-sm text-gray-base w-full py-5 px-4 h-2 border border-gray-200 rounded mb-2"
    %>
    <%= form.text_field :icon,
        placeholder: "Icon",
        class: "text-sm text-gray-base w-full py-5 px-4 h-2 border border-gray-200 rounded mb-2"
    %>
    <%= form.number_field :user_id,
        id: :category_user_id,
        placeholder: "Athor id",
        value: current_user.id,
        type: :hidden,
        class: "text-sm text-gray-base w-full py-5 px-4 h-2 border border-gray-200 rounded mb-2"
    %>
  </div>

  <div class="absolute bottom-0 left-0 w-full py-3 px-5 bg-blue-600">
    <%= form.submit class: "w-full uppercase p-3 border-solid border-2 border-light-white-500 py-3 px-5 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
