<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="fixed w-screen bottom-0 left-0 p-4 bg-green-500">
    <%= link_to 'scan',
        new_category_path,
        class: "uppercase w-full p-3 border-solid border-2 border-light-white-500  text-white block font-medium flex  justify-center items-center py-3 px-5" %>
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Deals</h1>
    <%= link_to 'New deal', new_deal_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="deals" class="min-w-full">
    <%= render @deals %>
  </div>
</div>
