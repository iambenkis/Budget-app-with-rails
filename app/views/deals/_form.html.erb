<%= form_with(model: deal, class: "contents") do |form| %>
  <div class="w-full flex justify-between items-center text-white bg-blue-400 p-2">
    <%= link_to "", categories_path, class: "fa-solid fa-chevron-left" %>
    <h2 class="uppercase">Transaction</h2>
    <div class="inline">
      <%= form.submit class: "" %>
  </div>
  </div>
  <% if deal.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(deal.errors.count, "error") %> prohibited this deal from being saved:</h2>

      <ul>
        <% deal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="m-2">
    <%= form.text_field :name, placeholder: "Deal name", class: "text-sm text-gray-base w-full py-5 px-4 h-2 border border-gray-200 rounded mb-2" %>
    <%= form.text_field :amount, placeholder: "Amount", class: "text-sm text-gray-base w-full py-5 px-4 h-2 border border-gray-200 rounded mb-2" %>
    <%= form.collection_select :category_id, current_user.categories.order(:name), :id, :name, {}, { class: "input w-full text-sm text-gray-base py-5 px-4 border border-gray-200 rounded mb-2", multiple: true } %>
    <%= form.number_field :author_id,id: :deal_author_id, placeholder: "Athor id", value: current_user.id, class: "text-sm text-gray-base w-full py-5 px-4 h-2 border border-gray-200 rounded mb-2" %>
  </div>

<% end %>
