<div id="<%= dom_id deal %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= deal.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= deal.amount %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this deal", deal, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this deal', edit_deal_path(deal), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
